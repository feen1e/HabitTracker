@model IEnumerable<HabitTracker.Models.Habit>

@{
ViewBag.Title = "Habit List";
}

@section Styles
{
<link/>
}
<main>
<h2>Your Habits</h2>

@foreach (var item in Model)
{
<div>
    <h3>@Html.DisplayFor(i => item.Name)</h3>
    <p>@Html.DisplayFor(i => item.IsActive)</p>
    <p>@Html.DisplayFor(i => item.Amount)</p>
    <p>@Html.DisplayFor(i => item.Unit)</p>
    <div><a asp-area="" asp-controller="Habit" asp-action="Details" asp-route-id="@item.Id">Details</a></div>
</div>
}

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Is Active</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
        <td>@Html.DisplayFor(modelitem => item.HabitRecords.LastOrDefault().IsCompleted)</td>
    </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New Habit", "Create")
</p>
</main>