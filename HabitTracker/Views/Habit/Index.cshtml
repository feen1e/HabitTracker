@model HabitHomeView

@{
    ViewBag.Title = "Habit List";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/index.css" />
}

<h1 id="habitsRemaining">
    @if (Model.HabitsRemainingToday > 0)
    {
    @($"You have {Model.HabitsRemainingToday} habits remaining today.")
    }
    else
    {
    @("You're all done. Great job!")
    }
</h1>

<main>
    <ul>
    @foreach (var item in Model.Habits)
    {
        <li class="list-item">
            <h3 class="name">@Html.DisplayFor(i => item.Name)</h3>
            <p class="is-active">@Html.DisplayFor(i => item.IsActive)</p>
            <p class="amount">@Html.DisplayFor(i => item.Amount)</p>
            <p class="unit">@Html.DisplayFor(i => item.Unit)</p>
        </li>
    }
    </ul>
</main>